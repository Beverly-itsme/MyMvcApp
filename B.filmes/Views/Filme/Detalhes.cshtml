@model B.filmes.Models.Filme

@{
    ViewData["Title"] = "Detalhes do Filme";
}

<h2>@Model.Titulo (@Model.Ano)</h2>

<div class="row">
    <div class="col-md-4">
        @if (!string.IsNullOrEmpty(Model.ImagemCapa))
        {
            <img src="@Model.ImagemCapa" alt="Capa de @Model.Titulo" class="img-fluid rounded" />
        }
        else
        {
            <p>Imagem não disponível.</p>
        }
    </div>
    <div class="col-md-8">
        <p><strong>Gênero:</strong> @Model.Genero</p>
        <p><strong>Diretor:</strong> @Model.Diretor</p>
        <p><strong>Duração:</strong> @Model.Duracao</p>
        <p><strong>Sinopse:</strong></p>
        <p>@Model.Sinopse</p>
        <p><strong>Plataformas:</strong> @Model.Plataformas</p>

        @if (!string.IsNullOrEmpty(Model.LinkTrailer))
        {
            <p><strong>Trailer:</strong></p>
            <iframe width="100%" height="315" src="@Model.LinkTrailer.Replace("watch?v=", "embed/")" frameborder="0" allowfullscreen></iframe>
        }

        @if (!string.IsNullOrEmpty(Model.LinkFilme))
        {
            <p>
                <a href="@Model.LinkFilme" target="_blank" class="btn btn-primary">Assistir Filme</a>
            </p>
        }
    </div>
</div>

<p>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Voltar à Lista</a>
</p>



