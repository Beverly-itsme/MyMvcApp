@model List<B.filmes.Models.Filme>

@{
    ViewData["Title"] = "Filmes";
}

<h2>Filmes</h2>

<p>
    <a href="@Url.Action("Criar")" class="btn btn-primary">Adicionar Filme</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Capa</th>
            <th>Título</th>
            <th>Ano</th>
            <th>Gênero</th>
            <th>Diretor</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var filme in Model)
        {
            <tr>
                <td>
                    @if (!string.IsNullOrEmpty(filme.ImagemCapa))
                    {
                        <img src="@filme.ImagemCapa" alt="Capa" width="60" />
                    }
                </td>
                <td>@filme.Titulo</td>
                <td>@filme.Ano</td>
                <td>@filme.Genero</td>
                <td>@filme.Diretor</td>
                <td>
                    <a href="@Url.Action("Detalhes", new { id = filme.Id })" class="btn btn-info btn-sm">Detalhes</a>
                    <a href="@Url.Action("Editar", new { id = filme.Id })" class="btn btn-warning btn-sm">Editar</a>
                    <a href="@Url.Action("Deletar", new { id = filme.Id })" class="btn btn-danger btn-sm" onclick="return confirm('Confirma exclusão deste filme?');">Remover</a>
                </td>
            </tr>
        }
    </tbody>
</table>


